<%- include('./partials/header.ejs')  -%>
<%- include('./partials/profileNav.ejs')  -%>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center pt-5" id="login">
                <div class="container border py-5">
                    <div class="title">
                        <h2 class="font-weight-bold">Edit Address</h2>
                    </div>
                    <form action="" method="post">
                        <% if(locals.message){ %>
                        <div>
                            <p class="text-danger"><%= message %></p>
                        </div>
                        <% } %>

                        <div class="card-body">
                            <div class="col-md-9 pe-5">

                                <input type="hidden" class="form-control form-control-lg" name="id" value=<%=address._id %> />

                            </div>
                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">Name</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="text" class="form-control form-control-lg" name="name" value=<%=address.name %> />

                                </div>
                            </div>

                            <hr class="mx-n3">

                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">Phone</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="number" class="form-control form-control-lg" name="phone" value=<%=address.phone %> />

                                </div>
                            </div>

                            <hr class="mx-n3">

                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">House No.</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="number" class="form-control form-control-lg" name="houseNumber"
                                    value=<%=address.houseNumber %> />

                                </div>
                            </div>

                            <hr class="mx-n3">
                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">Pincode</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="number" class="form-control form-control-lg" name="pincode" value=<%=address.pincode %> />

                                </div>
                            </div>

                            <hr class="mx-n3">





                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">Address</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <textarea class="form-control" rows="3" name="address" value=<%=address.address %>><%=address.address %></textarea>

                                </div>
                            </div>

                            <hr class="mx-n3">

                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">Landmark</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="text" class="form-control form-control-lg" name="landmark" value=<%=address.landmark %> />

                                </div>
                            </div>

                            <hr class="mx-n3">

                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">City</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="text" class="form-control form-control-lg" name="city" value=<%=address.city %> />

                                </div>
                            </div>

                            <hr class="mx-n3">

                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">State</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="text" class="form-control form-control-lg" name="state" value=<%=address.state %> />

                                </div>
                            </div>

                            <hr class="mx-n3">
                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">Alternate Phone</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="number" class="form-control form-control-lg" name="altPhone" value=<%=address.alternatePhone %>/>

                                </div>
                            </div>

                            <hr class="mx-n3">
                        </div>
                        
                            
                            <button type="submit" class="btn btnStyle">Save changes</button>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer.ejs')  -%>