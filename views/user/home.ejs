<%- include('./partials/header.ejs')  -%>
<%- include('./partials/navbar.ejs')  -%>

	


		

	<!-- Slider -->
	<section class="section-slide">
		<div class="wrap-slick1">
			<div class="slick1">
				<% banner.forEach(item=>{ %>
				<div class="item-slick1" style="background-image: url(asset/uploads/<%=item.image%>);">
					<div class="container h-full">
						<div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
							<div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
								<span class="ltext-101 cl2 respon2">
									<%=item.title %>
									
								</span>
							</div>
								
							<div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
								<h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
									<%=item.subtitle %>
								</h2>
							</div>
								
							<div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
								<a href="" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
									Shop Now
								</a>
							</div>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
	</section>


	<!-- Banner -->
	<div class="sec-banner bg0 p-t-80 p-b-50">
		<div class="container">
			<div class="row">
				<% category.forEach(cat=>{  %>
				<div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
					<!-- Block1 -->
					<div class="block1 wrap-pic-w">
						<img src="asset/uploads/<%= cat.image %>" alt="<%= cat.categoryName%>">

						<a href="" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
							

							<div class="block1-txt-child2 p-b-4 trans-05">
								<div class="block1-txt-child1 flex-col-l">
									<span class="block1-name ltext-102 trans-04 p-b-8 text-dark text-capitalize">
										<%= cat.categoryName%>
									</span>
	
									<span class="block1-info stext-102 trans-04 text-dark text-capitalize font-4xl font-weight-bold">
										<%= cat.description%>
									</span>
								</div>
								<div class="block1-link stext-101 cl0 trans-09">
									Shop Now
								</div>
							</div>
						</a>
					</div>
				</div>
				<% }) %>
				
			</div>
		</div>
	</div>


	<!-- Product -->
	<section class="bg0 p-t-23 p-b-140">
		<div class="container">
			<div class="p-b-10">
				<h3 class="ltext-103 cl5">
					Product Overview
				</h3>
			</div>

			<div class="flex-w flex-sb-m p-b-52">
				<div class="flex-w flex-l-m filter-tope-group m-tb-10">
					<a href="/filter-cat?id="" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-catid='all' data-filter="all">
						All Products
					</a>
					<% category.forEach(item=>{ %>
					<a href="/filter-cat?id=<%=item._id%>" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 cat text-capitalize" data-catid="<%=item._id%>" data-filter="<%=item.categoryName %>" >
						<%=item.categoryName %>
					</a>
					<% }) %>
				</div>

				
				
				<!-- Search product -->
				<form action="/search" method="post">
                               
					<!-- <button style="width: 10px;">search</button> -->
					 <div class="header-search-wrapper">
						 <button  class="sr-only">Search</button>
						 <input type="search" class="form-control bg-transparent" style="border-color:#B88E2F ;" name="search" id="search" placeholder="Search in..." >
						 
						</div><!-- End .header-search-wrapper -->
					 
				 </form>

				
			</div>

			<div class="row isotope-grid">
				<% products.forEach(function(pdt, index) { %>
					
				  <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item ">
					<!-- Block2 -->
					<!-- products -->
					
					<div class="block2">
					  <div class="block2-pic hov-img0">
						<a href="/product-detail?id=<%= pdt._id %>">
							<img src="asset/uploads/<%= pdt.images[0] %>" alt="IMG-PRODUCT">
						</a>
					  </div>
			  
					  <div class="block2-txt flex-w flex-t p-t-14">
						<div class="block2-txt-child1 flex-col-l">
							<% if(locals.user){ %>
								
								<a href="/product-detail?id=<%= pdt._id %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6 text-capitalize">
								  <%= pdt.productName %>
								</a>
								<% }else{ %>
									<a href="/login" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6 text-capitalize">
										<%= pdt.productName %>
									  </a>
									<% } %>
						  <span class="stext-105 cl3">
							Rs. <%= pdt.price %>
						  </span>
						</div>
			  
						<div class="block2-txt-child2 flex-r p-t-3">
						  <a href="/cart" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
							<img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png" alt="ICON">
							<img class="icon-heart2 dis-block trans-04 ab-t-l" src="images/icons/icon-heart-02.png" alt="ICON">
						  </a>
						</div>
					  </div>
					</div>
				  </div>
			  
				  <% if ((index + 1) % 4 === 0) { %>
					</div><div class="row isotope-grid">
				  <% } %>
				<% }) %>
				
			  </div>
			  

				

				
						
				</div>
			</div>

			<!-- Load more -->
			<!-- <div class="flex-c-m flex-w w-full p-t-45">
				<a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
					Load More
				</a>
			</div> -->
		</div>
	</section>


	<!-- footer -->
	<%- include('./partials/footerNav.ejs')  -%>
	<!-- Back to top -->
	<div class="btn-back-to-top" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="zmdi zmdi-chevron-up"></i>
		</span>
	</div>

	

	<script src="/asset/js/filterCat.js"></script>
<%- include('./partials/footer.ejs')  -%>