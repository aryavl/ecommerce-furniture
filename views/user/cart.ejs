<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
	<div class="container">
		<div class="row">
			<% if(cartItem.length===0){ %>
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<span class="text-center text-danger">No items</span><br>
						<a href="/products">Shop Now</a>
					</div>
				</div>
			<% } else{ %>
				<div class="col-lg-10 col-xl-10 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1 text-left">Product</th>
									<th class="column-2 text-center">Description</th>
									<th class="column-3 text-center">Price</th>
									<th class="column-4 text-center">Quantity</th>
									<th class="column-5 text-center">Total</th>
								</tr>
								<% const subtotal=[] %>
								
								<% cartItem.forEach(item => { %>
									<% const total = item.product.price * item.count%>
									<% subtotal.push(total) %>
									<tr class="table_row">
										<td class="column-1 text-center">
											<div class="how-itemcart1">
												<img src="/asset/uploads/<%= item.product.images[0] %>" alt="IMG">
											</div>
										</td>
										<td class="column-2 text-center"><%= item.product.productName %></td>
										<td class="column-3 text-center">Rs. <%= item.product.price %>.00</td>
										<td class="column-4 text-center">
											<div>
												<p class="msg"></p>
											</div>
											<div class="wrap-num-product flex-w m-l-auto m-r-0">
												<button onclick="decrementCount('<%= item.product._id %>','<%= item.count %>')" class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
													<i class="fs-16 zmdi zmdi-minus"></i>
												</button>

												<input class="mtext-104 cl3 txt-center num-product why" id="inpt" type="number" name="num-product1" value="<%= item.count %>" data-item-id="<%= item.product._id %>" min="1" max="<%= item.product.stock %>">

												<button class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m" onclick="increasecount('<%= item.product._id %>','<%= item.count %>')">
													<i class="fs-16 zmdi zmdi-plus"></i>
												</button>
											</div>
										</td>
										<td class="column-5 text-center">Rs. <%= item.product.price * item.count %>.00</td>
									</tr>
									<% }) %>
									<% const grandTotal= subtotal.reduce((acc,curr)=> acc+curr) %>
								</table>
							</div>
							<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm ">
								<div class="flex-w flex-m m-r-20 m-tb-5">
									<input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">
			
									<div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
										Apply coupon
									</div>
								</div>
			
								<div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
									Update Cart
								</div>
								
							</div>
							<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm ">
								<div class="flex-c-m stext-101 cl2 size-119  p-lr-15  m-tb-10">
									Grand Total
								</div>
								<div class="flex-c-m stext-101 cl2 size-119  p-lr-15  m-tb-10">
									<h2>Rs. <%=grandTotal %>.00</h2>
								</div>
							</div>
							<div class="d-flex justify-content-center mt-3">
								<a href="/address" class="flex-c-m stext-101 cl0 px-5 py-3 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
									Confirm order
								</a>
							</div>
						</div>
					</div>
				
			<% } %>
		</div>
	</div>
</form>
